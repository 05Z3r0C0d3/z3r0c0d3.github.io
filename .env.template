# ===========================================
# CASH HUNTERS BOT NETWORK - CONFIGURATION
# ===========================================
# Copy this file to .env and fill with your values
# NEVER commit .env to git - keep your tokens safe!

# ===========================================
# BOT TOKENS (Get from @BotFather)
# ===========================================
MASTER_BOT_TOKEN=your_master_bot_token_here
PUBLIC_BOT_TOKEN=your_public_bot_token_here

# ===========================================
# ADMIN SETTINGS
# ===========================================
ADMIN_ID=your_telegram_user_id_here
ADMIN_USERNAME=your_telegram_username

# ===========================================
# COMMISSION SETTINGS
# ===========================================
MASTER_COMMISSION_RATE=0.15
PUBLIC_COMMISSION_RATE=0.12
REFERRAL_BONUS=5.00

# ===========================================
# DATABASE SETTINGS
# ===========================================
DATABASE_URL=sqlite:///cash_hunters.db
REDIS_URL=redis://localhost:6379

# ===========================================
# API KEYS - GET THESE FROM RESPECTIVE SERVICES
# ===========================================

# Rakuten Advertising API
# Get from: https://advertising.rakuten.com/
RAKUTEN_API_KEY=your_rakuten_api_key

# Amazon Associates API  
# Get from: https://affiliate-program.amazon.com/
AMAZON_API_KEY=your_amazon_api_key

# CoinGecko API (Free tier available)
# Get from: https://www.coingecko.com/en/api
COINGECKO_API_KEY=your_coingecko_api_key

# Etherscan API (Free tier available)
# Get from: https://etherscan.io/apis
ETHERSCAN_API_KEY=your_etherscan_api_key

# Binance API (Optional)
# Get from: https://www.binance.com/en/binance-api
BINANCE_API_KEY=your_binance_api_key

# Coinbase API (Optional)
# Get from: https://developers.coinbase.com/
COINBASE_API_KEY=your_coinbase_api_key

# ===========================================
# SECURITY SETTINGS
# ===========================================
RATE_LIMIT_PER_MINUTE=20
MAX_USERS_PER_BOT=10000
SESSION_TIMEOUT=3600

# ===========================================
# FILE PATHS
# ===========================================
SHARED_DATA_FILE=bot_network_data.json
LOG_FILE=cash_hunters.log
BACKUP_DIR=./backups

# ===========================================
# WEBHOOK SETTINGS (For production deployment)
# ===========================================
WEBHOOK_URL=https://yourdomain.com/webhook
WEBHOOK_PORT=8443